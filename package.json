        "clean": "rimraf lib",
        "lint": "eslint '**/*.{ts,js}'",
        "format": "prettier --write '**/*.{js,jsx,ts,tsx,css,json,md,html,yml}'"
    },
    "dependencies": {},
    "optionalDependencies": {},
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@babel/core": "^7.8.3",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-transform-runtime": "^7.12.10",
        "@babel/preset-env": "^7.8.3",
        "@babel/preset-typescript": "^7.8.3",
        "@types/jest": "^26.0.20",
        "cross-env": "^7.0.3",
        "eslint": "^7.19.0",
        "gts": "^3.1.0",
        "jest": "^26.6.3",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.5.0",
        "typescript": "^4.1.3"
    }
